<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul"
    android:orientation="vertical"
    tools:context="com.udistrital.geographyplay.ConcentreseNorte">

    <include
        android:id="@+id/include1"
        layout="@layout/activity_main4"
        android:layout_width="wrap_content"
        android:layout_height="700dp"
        android:layout_below="@+id/t_p1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/t_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_p2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:fontFamily="@font/acme"
        android:text="@string/puntaje_jugador_0"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/t_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/acme"
        android:text="@string/encuentra_las_parejas"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        android:textStyle="bold" />

</RelativeLayout>
