<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul"
    tools:context="com.udistrital.geographyplay.MenuJuegos">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/acme"
        android:text="@string/elige_un_juego"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="60dp"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/btnPuzle"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:background="@color/design_default_color_surface"
        android:fontFamily="@font/aclonica"
        android:rotationY="8"
        android:text="@string/puzzle"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="170dp" />

    <Button
        android:id="@+id/btnConcentrese"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btnPuzle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="93dp"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="97dp"
        android:fontFamily="@font/aclonica"
        android:rotationY="8"
        android:text="@string/concentrese"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="288dp" />

    <Button
        android:id="@+id/btnPreguntas"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btnConcentrese"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="106dp"
        android:fontFamily="@font/aclonica"
        android:rotationY="8"
        android:text="@string/saber"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="200dp" />

    <Button
        android:id="@+id/btnOnline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPreguntas"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="165dp"
        android:text="Online" />
</RelativeLayout>
