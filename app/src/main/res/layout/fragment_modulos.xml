<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul"
    tools:context="com.udistrital.geographyplay.FirstFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/acme"
        android:text="@string/como_quieres_interactuar_con_la_informaci_n"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <ImageButton
        android:id="@+id/btnAR"
        android:layout_width="125dp"
        android:layout_height="150dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:background="@drawable/btnrealidad"
        android:fontFamily="@font/aclonica"
        android:text="@string/btnAR"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        android:textStyle="bold|italic" />
    <TextView
        android:id="@+id/textBtnAR"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/btnAR"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:gravity="center_horizontal" />

    <ImageButton
        android:id="@+id/btnSR"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:background="@drawable/btnexplora"
        android:fontFamily="@font/aclonica"
        android:text="@string/btnSR"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold|italic" />
    <TextView
        android:id="@+id/textBtnSAR"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/btnSR"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:gravity="center_horizontal" />
</RelativeLayout>