<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cristobal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/txtTitulo29"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margen"
        android:src="@drawable/cristobal" />

    <TextView
        android:id="@+id/txtTitulo29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="@string/san_cristobal_y_nieves"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtContenido29"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@+id/cristobal"
        android:layout_centerHorizontal="true"
        android:text="@string/contenido_txt29"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

</RelativeLayout>