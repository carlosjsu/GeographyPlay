<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/granadinas"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/txtTitulo30"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margen"
        android:src="@drawable/vicente" />

    <TextView
        android:id="@+id/txtTitulo30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="@string/granadinas"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtContenido30"
        android:layout_width="343dp"
        android:layout_height="234dp"
        android:layout_below="@+id/granadinas"
        android:layout_centerHorizontal="true"
        android:text="@string/contenido_txt30"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

</RelativeLayout>