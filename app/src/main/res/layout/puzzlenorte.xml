<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul"
    android:orientation="vertical"
    tools:context="com.udistrital.geographyplay.PuzzleNorte"
    tools:ignore="ContentDescription">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/acme"
        android:text="Arma el Rompecabezas"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scrollbars="horizontal"
        tools:scrollbarStyle="outsideInset"
        tools:visibility="visible"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="27dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgPt1"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:src="@drawable/norte1" />

            <ImageView
                android:id="@+id/imgPt2"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_alignTop="@+id/imgPt1"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/imgPt1"
                android:layout_toRightOf="@+id/imgPt1"
                android:src="@drawable/norte2" />

            <ImageView
                android:id="@+id/imgPt3"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_alignTop="@+id/imgPt2"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/imgPt2"
                android:layout_toRightOf="@+id/imgPt2"
                android:src="@drawable/norte3" />

            <ImageView
                android:id="@+id/imgPt4"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_alignTop="@+id/imgPt3"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/imgPt3"
                android:layout_toRightOf="@+id/imgPt3"
                android:src="@drawable/norte4" />

            <ImageView
                android:id="@+id/imgPt5"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_alignTop="@+id/imgPt4"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/imgPt4"
                android:layout_toRightOf="@+id/imgPt4"
                android:src="@drawable/norte5" />

            <ImageView
                android:id="@+id/imgPt6"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_alignTop="@+id/imgPt5"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/imgPt5"
                android:layout_toRightOf="@+id/imgPt5"
                android:src="@drawable/norte6" />

            <ImageView
                android:id="@+id/imgPt7"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_alignTop="@+id/imgPt6"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/imgPt6"
                android:layout_toRightOf="@+id/imgPt6"
                android:src="@drawable/norte7" />

            <ImageView
                android:id="@+id/imgPt8"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_alignTop="@+id/imgPt7"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/imgPt7"
                android:layout_toRightOf="@+id/imgPt7"
                android:src="@drawable/norte8" />

            <ImageView
                android:id="@+id/imgPt9"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_alignTop="@+id/imgPt8"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/imgPt8"
                android:layout_toRightOf="@+id/imgPt8"
                android:src="@drawable/norte9" />

        </RelativeLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/cBlanco1"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="35dp"
        android:layout_toLeftOf="@+id/cBlanco2"
        android:layout_toStartOf="@+id/cBlanco2"
        app:srcCompat="@drawable/imagen9" />

    <ImageView
        android:id="@+id/cBlanco2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignTop="@+id/cBlanco1"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/imagen9" />

    <ImageView
        android:id="@+id/cBlanco3"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignTop="@+id/cBlanco2"
        android:layout_toEndOf="@+id/cBlanco2"
        android:layout_toRightOf="@+id/cBlanco2"
        app:srcCompat="@drawable/imagen9" />

    <ImageView
        android:id="@+id/cBlanco4"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignLeft="@+id/cBlanco1"
        android:layout_alignStart="@+id/cBlanco1"
        android:layout_below="@+id/cBlanco1"
        app:srcCompat="@drawable/imagen9" />

    <ImageView
        android:id="@+id/cBlanco5"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@+id/cBlanco2"
        android:layout_toEndOf="@+id/cBlanco4"
        android:layout_toRightOf="@+id/cBlanco4"
        app:srcCompat="@drawable/imagen9" />

    <ImageView
        android:id="@+id/cBlanco6"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@+id/cBlanco2"
        android:layout_toEndOf="@+id/cBlanco5"
        android:layout_toRightOf="@+id/cBlanco5"
        app:srcCompat="@drawable/imagen9" />

    <ImageView
        android:id="@+id/cBlanco7"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignLeft="@+id/cBlanco4"
        android:layout_alignStart="@+id/cBlanco4"
        android:layout_below="@+id/cBlanco4"
        app:srcCompat="@drawable/parte9" />

    <ImageView
        android:id="@+id/cBlanco8"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@+id/cBlanco5"
        android:layout_toEndOf="@+id/cBlanco4"
        android:layout_toRightOf="@+id/cBlanco4"
        app:srcCompat="@drawable/parte9" />

    <ImageView
        android:id="@+id/cBlanco9"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@+id/cBlanco5"
        android:layout_toEndOf="@+id/cBlanco8"
        android:layout_toRightOf="@+id/cBlanco8"
        app:srcCompat="@drawable/parte9" />

    <ImageView
        android:id="@+id/Pt1"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignLeft="@+id/cBlanco1"
        android:layout_alignStart="@+id/cBlanco1"
        android:layout_alignTop="@+id/cBlanco1"
        android:src="@drawable/norte1"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/Pt2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignTop="@+id/cBlanco1"
        android:layout_toEndOf="@+id/cBlanco1"
        android:layout_toRightOf="@+id/cBlanco1"
        android:src="@drawable/norte2"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/Pt3"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignTop="@+id/cBlanco2"
        android:layout_toEndOf="@+id/cBlanco2"
        android:layout_toRightOf="@+id/cBlanco2"
        android:src="@drawable/norte3"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/Pt4"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignLeft="@+id/cBlanco4"
        android:layout_alignStart="@+id/cBlanco4"
        android:layout_below="@+id/cBlanco1"
        android:src="@drawable/norte4"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/Pt5"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@+id/cBlanco2"
        android:layout_toEndOf="@+id/cBlanco1"
        android:layout_toRightOf="@+id/cBlanco1"
        android:src="@drawable/norte5"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/Pt6"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@+id/cBlanco3"
        android:layout_toEndOf="@+id/cBlanco5"
        android:layout_toRightOf="@+id/cBlanco5"
        android:src="@drawable/norte6"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/Pt7"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignLeft="@+id/cBlanco7"
        android:layout_alignStart="@+id/cBlanco7"
        android:layout_below="@+id/cBlanco4"
        android:src="@drawable/norte7"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/Pt8"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@+id/cBlanco5"
        android:layout_toEndOf="@+id/cBlanco4"
        android:layout_toRightOf="@+id/cBlanco4"
        android:src="@drawable/norte8"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/Pt9"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@+id/cBlanco6"
        android:layout_toEndOf="@+id/cBlanco8"
        android:layout_toRightOf="@+id/cBlanco8"
        android:src="@drawable/norte9"
        android:visibility="invisible" />

</RelativeLayout>
