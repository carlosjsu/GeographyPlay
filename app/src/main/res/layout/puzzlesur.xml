<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul"
    android:orientation="vertical"
    tools:context="com.udistrital.geographyplay.PuzzleSur"
    tools:ignore="ContentDescription">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/acme"
        android:text="Arma el Rompecabezas"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cuadroBlanco8"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="27dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgPt1Colombia"
                android:layout_width="89dp"
                android:layout_height="123dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="19dp"
                android:layout_marginLeft="19dp"
                android:src="@drawable/puzzleres1" />

            <ImageView
                android:id="@+id/imgPt2Venezuela"
                android:layout_width="89dp"
                android:layout_height="123dp"
                android:layout_alignTop="@+id/imgPt1Colombia"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_toEndOf="@+id/imgPt1Colombia"
                android:layout_toRightOf="@+id/imgPt1Colombia"
                android:src="@drawable/puzzleres2" />

            <ImageView
                android:id="@+id/imgPt3Guyanas"
                android:layout_width="89dp"
                android:layout_height="123dp"
                android:layout_alignTop="@+id/imgPt2Venezuela"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"
                android:layout_toEndOf="@+id/imgPt2Venezuela"
