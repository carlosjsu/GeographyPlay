        android:src="@drawable/puzzleres8"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/Pt9nn"
        android:layout_width="89dp"
        android:layout_height="123dp"
        android:layout_below="@+id/cuadroBlanco6"
        android:layout_toEndOf="@+id/Pt8Argentina"
        android:layout_toRightOf="@+id/Pt8Argentina"
        android:src="@drawable/puzzleres9"
        android:visibility="invisible" />

</RelativeLayout>
