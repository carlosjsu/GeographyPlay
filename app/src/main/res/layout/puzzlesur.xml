        android:layout_toRightOf="@+id/cuadroBlanco2"
        app:srcCompat="@drawable/puzzle3" />

    <ImageView
        android:id="@+id/cuadroBlanco4"
        android:layout_width="89dp"
        android:layout_height="123dp"
        android:layout_alignLeft="@+id/cuadroBlanco1"
        android:layout_alignStart="@+id/cuadroBlanco1"
        android:layout_below="@+id/cuadroBlanco1"
        app:srcCompat="@drawable/puzzle4" />

    <ImageView
        android:id="@+id/cuadroBlanco5"
        android:layout_width="89dp"
        android:layout_height="123dp"
        android:layout_below="@+id/cuadroBlanco1"
        android:layout_toEndOf="@+id/cuadroBlanco4"
        android:layout_toRightOf="@+id/cuadroBlanco4"
        app:srcCompat="@drawable/puzzle5" />

    <ImageView
        android:id="@+id/cuadroBlanco6"
        android:layout_width="89dp"
        android:layout_height="123dp"
        android:layout_below="@+id/cuadroBlanco3"
        android:layout_toEndOf="@+id/cuadroBlanco5"
        android:layout_toRightOf="@+id/cuadroBlanco5"
        app:srcCompat="@drawable/puzzle6" />

    <ImageView
        android:id="@+id/cuadroBlanco7"
        android:layout_width="89dp"
        android:layout_height="123dp"
        android:layout_alignLeft="@+id/cuadroBlanco4"
